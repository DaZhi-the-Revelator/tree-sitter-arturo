{
  "name": "tree-sitter-arturo",
  "version": "0.1.0",
  "description": "Arturo grammar for tree-sitter",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "parser",
    "tree-sitter",
    "arturo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/tree-sitter-arturo.git"
  },
  "author": "Arturo Community",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.22.0",
    "prebuildify": "^6.0.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "prebuildify": "prebuildify --napi --strip",
    "build": "tree-sitter generate && node-gyp build",
    "generate": "tree-sitter generate",
    "test": "tree-sitter test"
  },
  "tree-sitter": [
    {
      "scope": "source.arturo",
      "file-types": [
        "art"
      ],
      "injection-regex": "^arturo$",
      "highlights": "queries/highlights.scm"
    }
  ]
}
